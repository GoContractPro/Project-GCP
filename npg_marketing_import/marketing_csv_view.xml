<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_import_marketing_csv_form" model="ir.ui.view">
            <field name="name">marketing.csv.form</field>
            <field name="model">import.marketing.csv</field>
            <field name="arch" type="xml">
                <form string="Read CSV" version="7.0">
                    <group col="4">
                    	<field name="name"/>
                    	<field name="end_time"/>
                        <field name="browse_path" />
                    </group>
                    
                    <newline/>
                    
                    <group col="8">
                    	<button name="check_expected_headers" string="Check Headers" type="object" />
                         <newline/>
                         <button name="import_csv" string="Test Import" type="object"  context="{'test':True}"/>
                         <field name="test_sample_size" />
                         <newline/>
                         <button name="import_csv" string="Import" type="object" class="oe_highlight" context="{'test':False}"/>
                         <field name="do_update" string="Update Existing Records" />
                   </group>

                    <group>
                    	 <field name="error_log"/>
                    	 <field name="field_map"/>
                    </group>

                </form>
            </field>
        </record>
        
        <record id="view_import_marketing_csv_tree" model="ir.ui.view">
            <field name="name">marketing.csv.tree</field>
            <field name="model">import.marketing.csv</field>
            <field name="arch" type="xml">
                <tree string="Read CSV" version="7.0">
                    	<field name="name"/>
                        <field name="browse_path" />
                 </tree>
            </field>
        </record>

        <record id="action_import_marketings" model="ir.actions.act_window">
            <field name="name">Import marketings</field>
            <field name="res_model">import.marketing.csv</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_marketing_csv_tree" />
        </record> 

        <menuitem action="action_import_marketings" id="menu_import_marketings" parent="marketing_campaign.menu_marketing_campaign"/>

    </data>
</openerp>