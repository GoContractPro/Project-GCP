<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_import_marketing_lead_csv_form" model="ir.ui.view">
            <field name="name">marketing.lead.csv.form</field>
            <field name="model">marketing.lead.csv</field>
            <field name="arch" type="xml">
                <form string="Read CSV" version="7.0">
                    <group col="4">
                    	<field name="name"/>
                    	<field name="end_time"/>
                        <field name="browse_path" />
                    </group>
                    
                    <newline/>
                    
                    <group col="8">
                         <field name="test_sample_size" />
                         <button name="import_csv" string="Test" type="object" clase="oe_highlight" context="{'test':True}"/>
                         <newline/>
                         <button name="import_csv" string="Import" type="object" class="oe_highlight"/>
                   </group>

                    <group>
                    	 <field name="error_log"/>
                    </group>
                    

                </form>
            </field>
        </record>
        
        <record id="view_import_marketing_lead_csv_tree" model="ir.ui.view">
            <field name="name">marketing.lead.csv.tree</field>
            <field name="model">marketing.lead.csv</field>
            <field name="arch" type="xml">
                <tree string="Read CSV" version="7.0">
                    	<field name="name"/>
                        <field name="browse_path" />
                 </tree>
            </field>
        </record>

        <record id="action_import_marketing_leads" model="ir.actions.act_window">
            <field name="name">Import Marketing Leads</field>
            <field name="res_model">marketing.lead.csv</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_marketing_lead_csv_tree" />
        </record> 

        <menuitem action="action_import_marketing_leads" id="menu_import_market_leads" parent="marketing_campaign.menu_marketing_campaign"/>

    </data>
</openerp>